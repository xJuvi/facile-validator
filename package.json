{
  "name": "@xjuvi/facile-validator",
  "version": "1.21.0",
  "description": "Easy HTML form validator written in TypeScript with tree-shaking",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xJuvi/facile-validator.git"
  },
  "homepage": "https://github.com/xJuvi/facile-validator",
  "license": "MIT",
  "scripts": {
    "dev": "vite --config ./playground/vite.config.ts",
    "deploy": "vite --config ./playground/vite.config.ts build",
    "build": "tsc && unbuild",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "release": "npm run test && npx standard-version && git push --follow-tags && npm publish --access public"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier -w -u"
  },
  "keywords": [
    "javascript",
    "typescript",
    "html",
    "validation",
    "validator",
    "form",
    "form-validation"
  ],
  "author": "Ali Nazari <alinazari.7321@gmail.com>",
  "contributors": [
    "Mohammad Saleh Fadaei <ms.fadaei1997@gmail.com> (https://twitter.com/ms_fadaei)"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@babel/types": "^7.29.0",
    "@types/jsdom": "27.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "@unocss/preset-wind": "^66.6.0",
    "@unocss/reset": "^66.6.0",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jsdom": "26.1.0",
    "lint-staged": "13.0.3",
    "path": "^0.12.7",
    "prettier": "2.7.1",
    "standard-version": "9.5.0",
    "typescript": "5.3.2",
    "unbuild": "1.2.1",
    "unocss": "^66.6.0",
    "vite": "5.0.2",
    "vitest": "0.34.6"
  },
  "bugs": {
    "url": "https://github.com/xJuvi/facile-validator/issues"
  },
  "directories": {
    "test": "tests"
  }
}
